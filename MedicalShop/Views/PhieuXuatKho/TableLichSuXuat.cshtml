@{
  string dayToString(DateTime? a)
  {
    if (a == null)
    {
      return "";
    }
    return a.Value.ToString("dd-MM-yyyy");
  }
}

<div id="tableLichSuXuat" class="table-responsive" style="white-space:nowrap;overflow-y: auto;">
  <table id="example" class="table table-striped table-hover text-center display nowrap" style="width:100%;max-height:500px">
    <thead>
      <tr>
        <th class="text-center">Số phiếu</th>
        <th class="text-center">Tên nhà cung cấp</th>
        <th class="text-center">Ngày tạo</th>
        <th class="text-center">Số hoá đơn</th>
        <th class="text-center">Ngày hoá đơn</th>
        <th class="text-center">Nhân viên tạo</th>
        <th class="text-center">Ghi chú</th>
        <th class="text-center">Tùy chọn</th>
      </tr>
    </thead>
    <tbody>
      @foreach (PhieuXuat p in ViewBag.ListPhieuXuat)
      {
      <tr>
        <td class="text-left">@p.SoPx</td>
        <td class="text-left">@p.IdkhNavigation.TenKh</td>
        <td>@p.CreatedDate.Value.ToString("dd-MM-yyyy HH:mm:ss")</td>
        <td class="text-left">@p.SoHd</td>
        <td>@dayToString(p.NgayHd)</td>
        <td class="text-left">@p.IdnvNavigation.TenNv</td>
        <td class="text-left">@p.Note</td>
        <td>
          <a href="/download/phieuxuat/@p.Id" class="btn btn-outline-success">In</a>
          <button type="button" onclick="ViewPhieuXuat('@p.Id')" class="btn btn-outline-primary mx-1">Xem</button>
        </td>
      </tr>
      }

    </tbody>
  </table>
</div>