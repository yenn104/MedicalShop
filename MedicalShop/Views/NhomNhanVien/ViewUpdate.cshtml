@model MedicalShop.Models.Entities.NhomNhanVien
@{
  Layout = "~/Views/Shared/_LayoutNV.cshtml";

}

<div class="card" style=" margin-bottom: 70px;">
  <div class="card-body">
    <form action="/NhomNhanVien/Update" method="post">
      <div class="forms-body">
        <div class="form-group">
          <label style="margin:7px 0;">Mã NNV</label>
          <input asp-for="@Model.MaNnv" type="text" class="form-control" required>
          <input asp-for="@Model.Id" type="hidden" />
        </div>
        <div class="form-group">
          <label style="margin:7px 0;">Tên NNV</label>
          <input asp-for="@Model.TenNnv" type="text" class="form-control" required>
        </div>
      </div>

      <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
        <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
        <input type="submit" class="btn btn-primary" value="Lưu">

      </div>


    </form>

  </div>
</div>