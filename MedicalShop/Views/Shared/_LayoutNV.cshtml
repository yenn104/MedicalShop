@{
    MedicalShopContext context = new MedicalShopContext();

    var acc = User.FindFirst("VaiTro");
    string name = null, staff = null, vaitro = null, username = null, admin = null;
    string img = null, image = null;
    //int active = 0;
    if (acc != null)
    {
        vaitro = acc.Value;
        admin = User.Claims.ElementAt(3).ValueType;
        username = acc.Subject.Name;
        staff = User.Claims.ElementAt(2).Type;
        name = User.Claims.ElementAt(2).Value;
        img = context.NhanVien.FirstOrDefault(x => x.UserName == username).Image;
        image = img != null ? img : "Unone.jpg";
    }

    List<ChucNang> getListMenu = new List<ChucNang>();

    if (admin == "1")
    {
        getListMenu = context.Menu
                        //.Include(x => x.IdmenuNavigation)
                        //.Where(x => (x.Idvt == int.Parse(vaitro)))
                        .Where(x => x.Index != 0)
                        .Select(x => new ChucNang()
                        {
                          Idmenu = x.Id,
                          Idvt = int.Parse(vaitro),
                          IdmenuNavigation = x,
                          Import = true, 
                          Export = true, 
                          Delete = true, 
                          Update = true, 
                          Print = true
                        })
                        .ToList();
    }
    else
    {
        getListMenu = context.ChucNang
                      .Include(x => x.IdmenuNavigation)
                      .Where(x => (x.Idvt == int.Parse(vaitro) && x.IdmenuNavigation.Index != 0 && (x.Import == true || x.Export == true || x.Delete == true || x.Update == true || x.Print == true)))
                      .ToList();
    }


}



