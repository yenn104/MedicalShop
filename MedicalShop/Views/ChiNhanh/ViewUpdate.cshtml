@model MedicalShop.Models.Entities.ChiNhanh

@{
  Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<div class="card" style=" margin-bottom: 70px;">
  <div class="card-body">
    <form action="/ChiNhanh/Update" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <input asp-for="Id" type="hidden" class="form-control" />
        Mã CN
        <input asp-for="MaCn" class="form-control" />
        <span asp-validation-for="MaCn" class="text-danger"></span>
      </div>
      <div class="form-group">
        Tên CN
        <input asp-for="TenCn" class="form-control" />
        <span asp-validation-for="TenCn" class="text-danger"></span>
      </div>
      <div class="form-group">
        Địa chỉ
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
      </div>
      <div class="form-group">
        SĐT
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
      </div>
      <div class="form-group">
        Mail
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
      </div>
      <div class="form-group">
        Ghi chú
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
      </div>
      <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
        <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
        <input type="submit" class="btn btn-primary" value="Lưu">
      </div>
    </form>

  </div>
</div>

