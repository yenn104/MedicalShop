  $("#example").on("change", ".gia, .tile", function () {
    var gia = $(this).val();
    if ($(this).hasClass("gia") && gia != 0) {
      $(this).val(toDecimal(gia));
      $(this).siblings(".tile").prop("readonly", true);
    } else if ($(this).hasClass("tile") && gia != 0) {
      $(this).val(toDecimal(gia));
      $(this).siblings(".gia").prop("readonly", true);
    } else {
      $(this).siblings(".gia, .tile").prop("readonly", false);
    }
  });




