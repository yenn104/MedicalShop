@model MedicalShop.Models.Entities.Hsx
@{
  Layout = "~/Views/Shared/_LayoutNV.cshtml";

}

<div class="card" style=" margin-bottom: 70px;">
  <div class="card-body">
    <form action="/HSX/Update" method="post">
      <div class="forms-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <input asp-for="Id" type="hidden" class="form-control" />
          Mã HSX
          <input asp-for="MaHsx" class="form-control" />
          <span asp-validation-for="MaHsx" class="text-danger"></span>
        </div>
        <div class="form-group">
          Tên HSX
          <input asp-for="TenHsx" class="form-control" />
          <span asp-validation-for="TenHsx" class="text-danger"></span>
        </div>
        <div class="form-group">
          Địa chỉ
          <input asp-for="Address" class="form-control" />
          <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
          SĐT
          <input asp-for="Phone" class="form-control" />
          <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
          Mail
          <input asp-for="Mail" class="form-control" />
          <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
      </div>
      <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
        <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
        <input type="submit" class="btn btn-primary" value="Lưu">
        
      </div>


    </form>

  </div>
</div>
