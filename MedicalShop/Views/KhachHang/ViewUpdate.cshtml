@model MedicalShop.Models.Entities.KhachHang
@{
  Layout = "~/Views/Shared/_LayoutNV.cshtml";

}

<div class="card" style=" margin-bottom: 70px;">
  <div class="card-body">
    <form action="/KhachHang/Update" method="post">
      <div class="forms-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <input asp-for="Id" type="hidden" class="form-control" />
          <label asp-for="MaKh" class="control-label"></label>
          <input asp-for="MaKh" class="form-control" />
          <span asp-validation-for="MaKh" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="TenKh" class="control-label"></label>
          <input asp-for="TenKh" class="form-control" />
          <span asp-validation-for="TenKh" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Address" class="control-label"></label>
          <input asp-for="Address" class="form-control" />
          <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Phone" class="control-label"></label>
          <input asp-for="Phone" class="form-control" />
          <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Mail" class="control-label"></label>
          <input asp-for="Mail" class="form-control" />
          <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Note" class="control-label"></label>
          <input asp-for="Note" class="form-control" />
          <span asp-validation-for="Note" class="text-danger"></span>
        </div>
      </div>
      <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
        <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
        <input type="submit" class="btn btn-primary" value="Lưu">
      </div>


    </form>

  </div>
</div>
