@model MedicalShop.Models.Entities.KhachHang
@{
  Layout = "~/Views/Shared/_LayoutNV.cshtml";

}

<div class="card" style=" margin-bottom: 70px;">
  <div class="card-body">
    <form action="/KhachHang/Update" method="post">
      <div class="forms-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="display:flex">
          <div class="group-left">
            <input asp-for="Id" type="hidden" class="form-control" />
            <label style="margin:7px 0;">Mã KH</label>
            <input asp-for="MaKh" class="form-control" />
            <span asp-validation-for="MaKh" class="text-danger"></span>
          </div>
          <div class="group-right">
            <label style="margin:7px 0;">Tên KH</label>
            <input asp-for="TenKh" class="form-control" />
            <span asp-validation-for="TenKh" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group" style="display:flex">
          <div class="group-left">
            <label style="margin:7px 0;">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
          </div>
          <div class="group-right">
            <label style="margin:7px 0;">SĐT</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
          </div>
        </div>
        <div class="form-group" style="display:flex">
          <div class="group-left">
            <label style="margin:7px 0;">Mail</label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
          </div>
          <div class="group-right">
            <label style="margin:7px 0;">Ghi chú</label>
            <input asp-for="Note" class="form-control" />
            <span asp-validation-for="Note" class="text-danger"></span>
          </div>
        </div>
      </div>
      <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
        <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
        <input type="submit" class="btn btn-primary" value="Lưu">
      </div>


    </form>

  </div>
</div>
