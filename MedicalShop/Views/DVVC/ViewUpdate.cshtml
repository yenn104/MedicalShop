@model MedicalShop.Models.Entities.Dvvc
@{
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
}

<div class="card" style=" margin-bottom: 70px;">
    <div class="card-body">
        <form action="/DVVC/Update" method="post">
            <div class="forms-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" type="hidden" class="form-control" />
                    <label asp-for="MaDvvc" class="control-label"></label>
                    <input asp-for="MaDvvc" class="form-control" />
                    <span asp-validation-for="MaDvvc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenDvvc" class="control-label"></label>
                    <input asp-for="TenDvvc" class="form-control" />
                    <span asp-validation-for="TenDvvc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>
            <div class="forms-footer" style="justify-content: space-between; display: flex; padding: 20px 0px 10px 0px; ">
                <a asp-action="Table"><input type="button" class="btn btn-secondary" value="Quay lại"></a>
                <input type="submit" class="btn btn-primary" value="Lưu">
            </div>
        </form>
    </div>
</div>